<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.e114.e114_eumyuratodemo1.mapper.UserMapper">
    <!-- User 테이블 가져오기 -->
    <select id="getUserList" resultType="com.e114.e114_eumyuratodemo1.dto.CommonMemberDTO">
        SELECT *
        FROM common_member
    </select>

    <!-- 회원 정보 가져오기 -->
    <select id="getUserById" resultType="com.e114.e114_eumyuratodemo1.dto.CommonMemberDTO">
        SELECT *
        FROM common_member
        WHERE id = #{id}
    </select>

    <select id="getUserByPwd" resultType="com.e114.e114_eumyuratodemo1.dto.CommonMemberDTO">
        SELECT *
        FROM common_member
        WHERE pwd = #{pwd}
    </select>

